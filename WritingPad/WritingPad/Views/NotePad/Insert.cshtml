
@{
    ViewBag.Title = "Insert";
}

<br />
<br />
<br />
@using (Html.BeginForm("Insert", "NotePad", FormMethod.Post,new {enctype="multipart/form-data" }))
{
    <div class="form-group">
        <div class="form-group">
            <input type="text" name="title" placeholder="Başlık" class="form-control" required />
        </div>
        <div class="form-group">
            <textarea type="text" name="explanation" placeholder="Açıklama" class="form-control"> </textarea>
        </div>
        <div class="form-group">
            <input type="text" name="noteUrl" placeholder="Url" class="form-control" />
        </div>
        <div class="form-group">
            <input type="file" name="uploadFile" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Ekle" />
        </div>
    </div>


}



